<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num1"
        android:hint="input the first number"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num2"
        android:hint="input the second number"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num1"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick1"
        android:backgroundTint="#3B7B98"
        android:id="@+id/plus"
        android:text="+"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num2"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick2"
        android:backgroundTint="#673AB7"
        android:id="@+id/minous"
        android:text="-"
        app:layout_constraintLeft_toRightOf="@+id/plus"
        app:layout_constraintBottom_toBottomOf="@+id/plus"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick3"
        android:backgroundTint="#956929"
        android:id="@+id/umnoshenie"
        android:text="*"
        app:layout_constraintLeft_toRightOf="@+id/minous"
        app:layout_constraintBottom_toBottomOf="@+id/minous"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick4"
        android:backgroundTint="#216C24"
        android:id="@+id/delenie"
        android:text="/"
        app:layout_constraintLeft_toRightOf="@+id/umnoshenie"
        app:layout_constraintBottom_toBottomOf="@+id/umnoshenie"
        />
    <TextView
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:text="result"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/plus"
        app:layout_constraintTop_toBottomOf="@+id/plus"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:backgroundTint="#FF5722"
        android:id="@+id/lesson_2"
        android:text="Lesson2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:backgroundTint="#FF5722"
        android:id="@+id/lesson_3"
        android:text="Lesson3"
        app:layout_constraintTop_toBottomOf="@id/lesson_2"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:backgroundTint="#FF5722"
        android:id="@+id/lesson_4"
        android:text="Lesson4"
        app:layout_constraintTop_toBottomOf="@id/lesson_3"
        app:layout_constraintLeft_toLeftOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>